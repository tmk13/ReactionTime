<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/white" />
            <gradient android:angle="-90" android:startColor="@color/white" android:endColor="@color/white"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/colorPrimary" />
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <size android:width="64dp" android:height="2dp" />
            <corners android:radius="5dp" />
            <!--<stroke android:width="1dp" android:color="@color/colorPrimary" />-->
            <gradient android:angle="-90" android:startColor="#DCDCDC" android:endColor="#808080" />
        </shape>
    </item>

</selector>